	<gap:plugin name="cordova-plugin-googlemaps-plus" source="npm" spec="1.4.0" >
       <param name="API_KEY_FOR_ANDROID" value="AIzaSyAxC0GiHixqxM4BicJxQbcvRZ_Zkcyxfl0" />
